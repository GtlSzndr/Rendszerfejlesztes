<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddCategories">

    <Button
        android:id="@+id/regAddCategories"
        android:layout_width="272dp"
        android:layout_height="50dp"
        android:layout_marginStart="70dp"
        android:layout_marginTop="20dp"
        android:background="#03dac5"
        android:text="Hozzáadás"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_below="@+id/stepbystep"/>



    <Button
        android:id="@+id/back"
        android:layout_width="123dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="34dp"
        android:layout_marginTop="662dp"
        android:layout_marginBottom="10dp"
        android:background="#03DAC5"
        android:text="Vissza"
        android:textSize="20sp"
        android:textStyle="bold" />


    <EditText
        android:id="@+id/reghierarchy"
        android:layout_width="296dp"
        android:layout_height="51dp"
        android:layout_below="@+id/regName"
        android:layout_marginStart="58dp"
        android:layout_marginEnd="57dp"
        android:layout_marginBottom="17dp"
        android:ems="10"
        android:hint="hierarchia száma"
        android:inputType="numberSigned"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/regName"
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        android:layout_below="@+id/textView3"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="57dp"
        android:layout_marginTop="180dp"
        android:layout_marginEnd="58dp"
        android:layout_marginBottom="17dp"
        android:ems="10"
        android:hint="Kategória neve"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="379dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="12dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="20dp"
        android:text="Kategória hozzáadása"
        android:textAlignment="center"
        android:textColor="#03DAC5"
        android:textSize="48sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="270dp"
        android:layout_height="32dp"
        android:layout_below="@+id/normtime"
        android:layout_marginStart="57dp"
        android:layout_marginTop="10dp"
        android:text="Karbantartás intervalluma:"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/stepbystep"
        android:layout_width="296dp"
        android:layout_height="51dp"
        android:layout_below="@+id/maintenperiod"
        android:layout_marginStart="58dp"
        android:layout_marginEnd="57dp"
        android:layout_marginBottom="17dp"
        android:hint="Instrukciók megadása"
        android:textSize="20sp"
        android:layout_marginTop="10dp"/>
    <Spinner
        android:id="@+id/maintenperiod"
        android:layout_width="292dp"
        android:layout_height="37dp"
        android:layout_below="@+id/textView11"
        android:layout_marginStart="57dp" />

    <EditText
        android:id="@+id/normtime"
        android:layout_width="296dp"
        android:layout_height="51dp"
        android:layout_below="@+id/reghierarchy"
        android:layout_marginStart="58dp"
        android:layout_marginEnd="57dp"
        android:ems="10"
        android:hint="Norma idő percben megadva "
        android:inputType="numberSigned"
        android:textSize="20sp" />

</RelativeLayout>